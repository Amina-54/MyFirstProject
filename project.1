        num = num /10;
    }
    int min = (lastDigit > firstDigit ? firstDigit :lastDigit );
    cout << "The minimum digit between the first and the last digits of a given integer is: " << min;
    int factorial  = 1;
    for (int i = 1; i <= min; i++) {
