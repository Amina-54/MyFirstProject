bool prime(int i){ 
    //دالة تتحقق هل العدد اولي ام لا
    if (i<2) return false;
        
    for (int a = 2; a <= i/2 ; a++){
        if (i%a==0) return false;
    }
    return true;
}

int power(int x, int i){
    // x - العدد
    // i - الاس
    int num = 1;
    for (int a = 1; a <= i; a++){
        num = num * x;
    }
    return num;
    
}

